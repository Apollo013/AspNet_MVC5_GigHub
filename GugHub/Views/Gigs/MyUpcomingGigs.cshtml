@model IEnumerable<GugHub.Models.Gigs.Gig>
@{
    ViewBag.Title = "My Upcoming Gigs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<ul class="gigslist">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Venue
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit","Gigs", new { id = gig.Id})" >Edit</a>
                    <a href="#" class="js-cancel-gig" data-gig-id="@gig.Id">Cancel</a>
                </div>
            </div> 
        </li>
    }
</ul>


@section scripts
{
    <script src="~/Scripts/bootbox.min.js"></script>

    <script>
        $(document).ready(function () {

            $(".js-cancel-gig").on("click", function (e) {
                e.preventDefault();
                var link = $(e.target);

                bootbox.confirm({
                    title: "Cancel Gig?",
                    message: "Do you want to cancel this gig? This cannot be undone.",
                    buttons: {
                        cancel: {
                            label: '<i class="fa fa-times"></i> No'
                        },
                        confirm: {
                            label: '<i class="fa fa-check"></i> Yes',
                            className: "btn-danger"
                        }
                    },
                    callback: function (result) {
                        if (result == true) {
                            $.ajax({
                                url: "/api/gigapi/" + link.attr("data-gig-id"),
                                method: "DELETE"
                            })
                            .done(function () {
                                link.parents("li").fadeOut(function () {
                                    $(this).remove();
                                });

                            })
                            .fail(function (error) {
                                console.log(error);
                            });
                        }
                    }
                });
            });
        });
    </script>
}