@using GugHub.Models.Application
@model LoginViewModel
@{
//ViewBag.Title = "Log in";
}

<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Log In</div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                <form id="loginform" class="form-horizontal col-md-offset-2" role="form" novalidate="novalidate" action="/Account/Login" method="post">
                    @Html.AntiForgeryToken()
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" class="form-control" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." id="Email" name="Email" value="p@gmail.com" placeholder="email">
                    </div>
                    <span class="field-validation-valid text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></span>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" class="form-control" data-val="true" data-val-required="The Password field is required." id="Password" name="Password" placeholder="password" value="Password1.">
                    </div>
                    <span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span>

                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <input value="Log in" class="btn btn-success" type="submit">
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}